Bootstrap: docker
From: conda/miniconda2

%post
    apt update
    apt upgrade -y
    apt install -y python3 python3-pip libgl1-mesa-glx rsync git curl wget 
    
    cd /opt
    git clone https://github.com/openpaul/ncbi-genome-download/
    cd ncbi-genome-download
    git checkout na_fix
    pip install .


%environment
    export LC_ALL=C

